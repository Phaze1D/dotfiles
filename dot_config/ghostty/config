font-family = MesloLGS Nerd Font
font-size = 16

theme = tokyonight-storm 

keybind = super+alt+k=goto_split:up
keybind = super+alt+j=goto_split:down
keybind = super+alt+l=goto_split:right
keybind = super+alt+h=goto_split:left

keybind = super+ctrl+k=resize_split:up,20
keybind = super+ctrl+j=resize_split:down,20
keybind = super+ctrl+l=resize_split:right,20
keybind = super+ctrl+h=resize_split:left,20

keybind = super+up=scroll_to_top
keybind = super+down=scroll_to_bottom




